{
    "app-id" : "com.github.maoschanz.DynamicWallpaperEditor",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "command" : "dynamic-wallpaper-editor",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home:rw"
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "modules" : [
        {
            "name" : "dynamic-wallpaper-editor",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "tag" : "1.7",
                    "commit" : "9d9fda424acf22b012ba77b37971ab1716bcf8de",
                    "url" : "git@github.com/maoschanz/dynamic-wallpaper-editor.git"
                }
            ]
        }
    ]
}
